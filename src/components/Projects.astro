---

<!-- <tag.icon class="size-4"/> -->
{
    PROJECTS.map(({title, description, image, tags}) =>(
        <article class="pb-16">
            <h3 class="text-2xl font-semibold text-blue-400/90 dark:text-blue-400/90 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {
                    tags.map(tag => (
                        <li>
                            <span class={`
                                    flex gap-x-2 rounded-full
                                    text-xs
                                    ${tag.class}
                                    py-1 px-2
                                    border border-white/10
                                `}>
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img
                loading="lazy"
                class="rounded shadow-2xl shadow-white/10 aspect-video"
                src={image}
                alt={`Captura de pantalla del proyecto ${title}`}
                >
        </article>
    ))
}
