        image: "https://www.naiarafernandez.com/wp-content/uploads/2015/10/que-debo-tener-en-cuenta-para-planificar-un-proyecto-web.png",
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.FLUTTER, TAGS.GIT, TAGS.GITHUB]
