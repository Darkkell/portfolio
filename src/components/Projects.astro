    PROJECTS.map(({ title, description, image, tags, link, github }) => (
      <article class="pb-16">
        <h3 class="text-2xl font-semibold text-blue-400/90 dark:text-blue-400/90 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex flex-wrap gap-x-2  mb-2">
          {tags.map((tag) => (
            <li class="pt-1 pb-1">
              <span
                class={`
                                  flex gap-x-2 rounded-full
                                  text-xs
                                  ${tag.class} text-white
                                  py-1 px-2
                                  border border-white/10
                                  `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        {image && (
          <img
            loading="lazy"
            class="rounded shadow-2xl shadow-white/10 aspect-auto"
            src={`${image[0]}`}
            alt={`Seleccionado de pantalla del proyecto ${title}`}
            id={`${title}`}
          />
          <section>
            {image.map((image) => (
              <img
                loading="lazy"
                class="rounded shadow-2xl shadow-white/10 aspect-auto"
                src={image}
                alt={`Captura de pantalla del proyecto ${title}`}
                id={`${title}-${image}`}
                data-image
              />
            ))}
          </section>
        )}
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Web class="size-6" />
              Ir al sitio web
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</div>

<script>
  const images = document.querySelectorAll('[data-image]');
  images.forEach((image) => {
    image.addEventListener('click', () => {
      const idImage = image.id.split(`-`)[0];
      const newSrc = image.id.split(`-`)[1];
      const imageChanged = document.getElementById(`${idImage}`);
      (imageChanged as HTMLImageElement).src = newSrc;
    })
  })
</script>

<style>
  section {
    display: flex;
    flex-wrap: wrap;
    /* min-height: 40rem; */
  }
  section img {
    width: 5rem;
    opacity: 0.8;
    margin: 7px 5px 0 0;
  }
  section img:hover {
    cursor: crosshair;
    opacity: 1;
  }
</style>
