---
<div class="flex flex-col gap-y-16">
  {
      PROJECTS.map(({title, description, image, tags, link, github}) =>(
          <article class="pb-16">
              <h3 class="text-2xl font-semibold text-blue-400/90 dark:text-blue-400/90 mb-2">{title}</h3>
              <p class="text-lg mb-4 text-pretty">{description}</p>
              <ul class="flex flex-wrap gap-x-2  mb-2">
                  {
                      tags.map((tag) => (
                          <li class="pt-1 pb-1">
                              <span class={`
                                  flex gap-x-2 rounded-full
                                  text-xs
                                  ${tag.class} text-white
                                  py-1 px-2
                                  border border-white/10
                                  `}>
                                  <tag.icon class="size-4"/>
                                  {tag.name}
                              </span>
                          </li>
                      ))
                  }
              </ul>
              <img
                  loading="lazy"
                  class="rounded shadow-2xl shadow-white/10 aspect-video"
                  src={image}
                  alt={`Captura de pantalla del proyecto ${title}`}
                  />
              <footer class="flex gap-x-4 items-end justify-start mt-4">
                {
                  github &&
                  <LinkButton href={github}>
                    <GitHub class="size-6"/>
                    Ver c√≥digo fuente
                  </LinkButton>
                }
                {
                  link &&
                  <LinkButton  href={link} >
                    <Web class="size-6"/>
                    Ir al sitio web
                  </LinkButton>
                }
              </footer>
          </article>
      ))
  }
</div>
